{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",

        "strict": true,
        "strictNullChecks": true,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,

        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,

        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*", "dist/*"] // dist for tsconfig-paths to resolve
        }
    },
    "include": [
        "node_modules/@types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}
